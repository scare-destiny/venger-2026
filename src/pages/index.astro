---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import { Avatar } from "@/components/React/Avatar";
import { Container } from "@/components/React/Container";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const isDev = import.meta.env.DEV;

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
const draftPosts = posts.filter(({ data }) => data.draft);

console.log(`${isDev ? "DEV" : "PROD"}`);

---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <div class="flex flex-col items-center gap-6 sm:flex-row sm:items-start sm:gap-10">
        <Avatar className="shrink-0" />
        <div>
          <h1 class="my-4 inline-flex items-center gap-3 text-4xl font-bold sm:my-0 sm:text-5xl">
            Hej you!
            <a
              target="_blank"
              href="/rss.xml"
              class="inline-block"
              aria-label="rss feed"
              title="RSS Feed"
            >
              <IconRss
                width={20}
                height={20}
                class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
              />
              <span class="sr-only">RSS Feed</span>
            </a>
          </h1>
          
          <p class="mt-4">
            Hey there! I'm Eugene, now in Warsaw. I work with data a lot - databases (Postgres is the best!), web analytics.
            In my free time, I cook, I write, I share what I learn.
          </p>
          <p class="pt-2">
            Tired of consuming content elsewhere, so decided to make my own.
          </p>
          {
            SOCIALS.length > 0 && (
              <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
                {/* <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div> */}
                <Socials />
              </div>
            )
          }
        </div>
      </div>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    {isDev && (
      <section id="draft-posts" class="pt-12 pb-6">
        <h2 class="text-2xl font-semibold tracking-wide">Draft Posts (only visible in dev mode ðŸ˜Ž)</h2>
        <ul>
          {draftPosts.map(data => <Card variant="h3" {...data} />)}
        </ul>
      </section>
    )}

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
